{
  "openapi": "3.0.0",
  "info": {
    "title": "Bitcoin Faces API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/get-hash-array": {
      "get": {
        "summary": "Get Hash Array",
        "description": "Returns an array of hashes for the given string",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "text/plain": {
                "example": "hash1,hash2,hash3..."
              }
            }
          },
          "400": {
            "description": "Missing name parameter"
          },
          "404": {
            "description": "Error"
          }
        }
      }
    },
    "/api/get-image": {
      "get": {
        "summary": "Get Image",
        "description": "Returns an SVG image for the given string, composed of layers selected based on the hash array",
        "responses": {
          "400": {
            "description": "Missing name parameter"
          },
          "404": {
            "description": "Error"
          },
          "200": {
            "description": "Successful Response",
            "content": {
              "image/svg+xml": {}
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "onchain",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "host",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/api/get-layers": {
      "get": {
        "summary": "Get Layers",
        "description": "Returns an array of layers for the given string, selected based on the hash array",
        "responses": {
          "400": {
            "description": "Missing name parameter"
          },
          "404": {
            "description": "Error"
          },
          "200": {
            "description": "Successful Response",
            "content": {
              "text/plain": {
                "example": [
                  "background-5",
                  "body-7",
                  "head-4",
                  "ears-7",
                  "eyes-6",
                  "nose-2",
                  "mouth-5",
                  "chain-1",
                  "earring-4",
                  "glasses-1",
                  "hat-1"
                ]
              }
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "onchain",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ]
      }
    },
    "/api/get-layers-code": {
      "get": {
        "summary": "Get Layers Code",
        "description": "Returns an object with each layer and the related SVG code for the given string, selected based on the hash array",
        "responses": {
          "400": {
            "description": "Missing name parameter"
          },
          "404": {
            "description": "Error"
          },
          "200": {
            "description": "Successful Response",
            "content": {
              "text/plain": {
                "example": {
                  "background": "<svg>...</svg>",
                  "body": "<svg>...</svg>",
                  "head": "<svg>...</svg>",
                  "ears": "<svg>...</svg>",
                  "eyes": "<svg>...</svg>",
                  "nose": "<svg>...</svg>",
                  "mouth": "<svg>...</svg>",
                  "chain": "<svg>...</svg>",
                  "glasses": "<svg>...</svg>",
                  "hat": "<svg>...</svg>"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "onchain",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          }
        ]
      }
    },
    "/api/get-svg-code": {
      "get": {
        "summary": "Get SVG Code",
        "description": "Returns the SVG code for the given string, composed of layers selected based on the hash array",
        "responses": {
          "400": {
            "description": "Missing name parameter"
          },
          "404": {
            "description": "Error"
          },
          "200": {
            "description": "Successful Response",
            "content": {
              "text/plain": {
                "example": "<svg id=\"Bitcoin face for yourname.sats\" width=\"500\" height=\"500\" xmlns=\"http://www.w3.org/2000/svg\" xmlns:xlink=\"http://www.w3.org/1999/xlink\">...contents of SVG...</svg>"
              }
            }
          }
        },
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "onchain",
            "in": "query",
            "required": false,
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "host",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    }
  }
}
